<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/statsholder_margin_vertical"
    android:layout_marginBottom="@dimen/statsholder_margin_vertical"
    android:layout_marginRight="@dimen/statsholder_margin_horizontal"
    android:layout_marginLeft="@dimen/statsholder_margin_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_modifiers">
    
    <TextView
        android:id="@+id/homeTeamValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="100"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/middleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/homeTeamValue"
        android:layout_toLeftOf="@+id/awayTeamValue"
        android:text="Rebounds"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/awayTeamValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="100"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


</RelativeLayout>